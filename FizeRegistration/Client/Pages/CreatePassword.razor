@page "/auth/signup/email/confirmation"
@using FizeRegistration.Client.Components.PartOfTheSite


<div class="basicBox" style="margin-top:7%;">
    @if (LoadingProcess)
    {
        <LoadingBar></LoadingBar>
    }
    <BlockCreatePassword></BlockCreatePassword>
    <div class="rightSideOfRegistration">
        <div class="DivLocation">
            <FizeImage></FizeImage>
        </div>
        @if (SuccessfulPassword)
        {
            <BlockSuccesfulMail IsButton=@(true) Message="Great! Your account was successfully created! Now you can log in!"></BlockSuccesfulMail>
        }
        else
        {
            <div class="DivLocation">

                <div>
                    <div class="RightHeadWordsBox">Welcome there!</div>
                    <div class="RightBoxText" style=" margin-top: 20px; font-size: 12.3pt; height: 11px;">Please set your
                        password</div>
                    <div>
                        <div class="smallText" style="color: black; font-size: 11.2pt; margin-top: 30px;height: 11px;">New
                            password</div>
                        <label>
                            <input type="password" @bind="NewPassword" class="InputMail" />
                        </label>

                        <div class="smallText" style="margin-top: 20px;  color: black; font-size: 11.2pt; height: 11px;">
                            Confirm new password</div>
                        <label>
                            <input type="password" @bind="ConfirmPassword" class="InputMail" />
                        </label>
                        @if (BadRequestEmail)
                        {
                            <div class="RightBoxText" style="color:red">@SendMessageBadMail</div>

                        }
                        <button style="margin-top: 45px;" class="buttonSendEmail" @onclick="SendConfirmation">Set
                            Password</button>
                    </div>
                </div>
            </div>

        }
    </div>

</div>
