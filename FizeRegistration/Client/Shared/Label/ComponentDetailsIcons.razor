<i class="@NameIcons"></i> @*fa fa-globe icon      Enter your company website*@
<InputText id="website" @bind-Value="@TextValidate" class="LabelAgency input-field"
           placeholder="@PlaceHolder" style="text-indent: 30px;" @oninput="OnTextValidateChanged"></InputText>


@code{
    [Parameter] public string NameIcons { get; set; }

    [Parameter] public string PlaceHolder { get; set; }

    [Parameter] public string TextValidate { get; set; }

    [Parameter] public EventCallback<string> TextValidateChanged { get; set; }

    [Parameter] public string TypeWord { get; set; } = "text";

    private Task OnTextValidateChanged(ChangeEventArgs e)
    {
        TextValidate = e.Value.ToString();
        return TextValidateChanged.InvokeAsync(TextValidate);
    }
}